<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="334.0" prefWidth="296.0" spacing="10" styleClass="ventanaEditarDistancia" stylesheets="@stylesheet.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.openjfx.EditarDistanciaController">
    <Label text="Editar Distancia">
      <font>
         <Font name="Segoe UI Bold" size="21.0" />
      </font></Label>
    <TextField fx:id="idField" promptText="ID del Recorrido" styleClass="campoDeTexto" stylesheets="@stylesheet.css">
      <VBox.margin>
         <Insets left="10.0" right="10.0" />
      </VBox.margin>
      <font>
         <Font name="Segoe UI" size="15.0" />
      </font></TextField>
    <TextField fx:id="distanciaField" promptText="Nueva Distancia" styleClass="campoDeTexto">
      <VBox.margin>
         <Insets left="10.0" right="10.0" />
      </VBox.margin>
      <font>
         <Font name="Segoe UI" size="15.0" />
      </font></TextField>
    <Button onAction="#guardarCambios" prefHeight="33.0" prefWidth="82.0" styleClass="botonCargar" text="Guardar">
      <font>
         <Font name="Segoe UI Bold" size="15.0" />
      </font></Button>
</VBox>
